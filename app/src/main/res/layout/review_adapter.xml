<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="@dimen/dimens_5"
        android:src="@drawable/ic_face2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dip">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dip">

            <TextView
                android:id="@+id/review_userneme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="151****0047"
                android:textColor="@color/green_color"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="2dip"
                android:paddingBottom="5dip"
                android:paddingRight="5dip"
                android:paddingTop="5dip"
                android:text="2015-06-27 21:00:30"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/review_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimens_5"

             />

        <View
            android:layout_width="wrap_content"
            android:layout_height="2dip"
            android:background="@drawable/dotted_line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dip"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/image_1" />

            <ImageView
                android:layout_width="80dip"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/image_1" />

            <ImageView
                android:layout_width="80dip"
                android:layout_height="80dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/image_1" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>