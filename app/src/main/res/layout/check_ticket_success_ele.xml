<LinearLayout
    android:id="@+id/check_ticket_success_ele"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:visibility="visible">

    <!-- 上面矩形区域  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/checked_correct_topbg"
        android:orientation="vertical">

        <!--  上面 票码正常部分  -->
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="45dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2FB594"
            android:text="【票码正常】"/>

        <!--  分割线  -->
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#2FB594" />

        <!-- 中间部分 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TableLayout
                android:layout_gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"  >
                <TableRow>
                    <TextView
                        android:id="@+id/abc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单环境的海订单环境的海订单环境的海订单环境的海订"
                        />
                </TableRow>
                <TableRow>
                    <TableLayout>
                        <TableRow>
                            <TextView
                                android:layout_margin="6dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:text="数量" />
                            <TextView
                                android:layout_margin="6dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:text="2张"  />
                        </TableRow>
                        <TableRow>
                            <TextView
                                android:layout_margin="6dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" android:text="数量" />
                            <TextView
                                android:layout_margin="6dp"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content" android:text="2张"  />
                        </TableRow>
                    </TableLayout>
                </TableRow>
            </TableLayout>

            <!--  最后一部分  -->
            <TextView
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_border_color_1"
                android:layout_gravity="right"
                android:gravity="center"
                android:singleLine="true"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="6dp"
                android:text="在线支付"
                />
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#2FB594" />

        <!--  分割线  -->

        <!--   下面一部分    -->
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow >
                <TextView
                    android:layout_margin="6dp"
                    android:width="90dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单号" />
                <TextView
                    android:layout_margin="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MP-LY0123456" />
            </TableRow>
            <TableRow >
                <TextView
                    android:layout_margin="6dp"
                    android:width="90dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到期时间" />
                <TextView
                    android:layout_margin="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015-12-31 17:00:00" />
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_margin="6dp"
                    android:width="90dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="入园方式" />
                <TextView
                    android:layout_margin="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到景区售票处换取门票入园" />
            </TableRow>
        </TableLayout>

    </LinearLayout>


    <!--  下面锯齿图形部分   -->
    <TextView
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#FFFFFF"
        android:background="@drawable/checked_correct_topbg_green"
        android:text="无相关票码"/>

    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/check_ticket_valid_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5AD49"
        android:textColor="#FFFFFF"
        android:text="确认入园"
        />
</LinearLayout>