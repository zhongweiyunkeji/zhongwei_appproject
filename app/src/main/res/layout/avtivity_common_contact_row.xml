<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>
                <TextView
                    android:id="@+id/contacts_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="14dp"
                    android:textColor="@color/list_title_color"
                    android:textSize="20sp"
                    android:text="老婆" />

                <TextView
                    android:id="@+id/contacts_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    android:paddingTop="14dp"
                    android:textColor="@color/edit_color"
                    android:textSize="18sp"
                    android:text="（家人）" />
                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/ic_menu_eidt"/>
            </TableRow>

            <TableRow
                android:layout_marginTop="-10dp">
                <TextView
                    android:id="@+id/contacts_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:paddingBottom="14dp"
                    android:textSize="16sp"
                    android:textColor="@color/text_color_code"
                    android:text="手机号：18911339266"
                    />
            </TableRow>

        </TableLayout>

    </LinearLayout>

